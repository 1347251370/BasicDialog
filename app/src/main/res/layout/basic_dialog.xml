<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_circledialog_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:ems="13"
            android:text="alert"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_textview"
            style="@style/dialog_message"
            android:ems="13"
            android:gravity="center"
            android:text="当前无网络连接，请前往设置页面打开蓝牙连接使用" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_bottom_dialog_layout"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cancel_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/cancel_textview"
                style="@style/dialog_btn_text"
                android:text="取消" />

        </LinearLayout>

        <View
            android:id="@+id/vertical_line"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#426289" />

        <LinearLayout
            android:id="@+id/ensure_layout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/ensure_textview"
                style="@style/dialog_btn_text"
                android:text="确认" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
